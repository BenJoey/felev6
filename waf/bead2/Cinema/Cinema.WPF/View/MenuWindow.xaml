<Window x:Class="Cinema.WPF.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema.WPF.View"
        mc:Ignorable="d"
        Title="Menu" Height="300" Width="300">
    <StackPanel>
        <Button Command="{Binding NewMovieCommand}" Width="150" Margin="20">Add new movie</Button>
        <Button Command="{Binding NewShowCommand}" Width="150" Margin="20">Add new show</Button>
        <Button Command="{Binding ReserveCommand}" Width="150" Margin="20">Sell tickets</Button>
        <Button Command="{Binding LogoutCommand}" Width="150" Margin="20">Logout</Button>
    </StackPanel>
</Window>
